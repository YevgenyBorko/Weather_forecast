<!DOCTYPE html>
<html>
<head>
    <% include partials/head %>
    <script src="javascripts/funcs.js" defer></script>
</head>
<body>

<div class="container-fluid">
    <div class="text-center"><h1><%= title %></h1></div>

    <div class="col-md-2 border bg-light mx-auto pr-5">

        <div class="text-info pt-2"><h2> &nbsp; &nbsp; Password:</h2></div>
        <form action="/api/add" method="post">
            <div class="field">
                <label>Password</label>
                <div class="control">
                    <input class="input" type="password" id="password" name="password"  required >
                </div>
            </div>
            <div class="field">
                <label>Verify Password</label>
                <div class="control">
                    <input class="input" type="password" id="confirm_password" required>
                </div>
            </div><br>
            <div class="field">
                <div class="control">
                    <button class="btn btn-success" type="submit" id="save_button">Save</button><br><br>
                </div>
            </div>
        </form>
    </div>
</div>

</body>
<% include partials/script %>
</html>
